{
	"$schema": "https://biomejs.dev/schemas/1.9.1/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": []
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noThisInStatic": "off",
				"useOptionalChain": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"arrowParentheses": "always",
			"quoteStyle": "single",
			"trailingCommas": "all",
			"semicolons": "always",
			"lineWidth": 80,
			"bracketSameLine": true,
			"bracketSpacing": true,
			"indentStyle": "space",
			"indentWidth": 2
		}
	}
}